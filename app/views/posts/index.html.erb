<h2>Listing Post</h2>
<table class="table table-bordered" >
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th colspan="3">Action</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body.truncate(20) %></td>
      <td><%= post.user.name %></td>
      <td><%= link_to 'Show', post_path(post), class: "btn btn-primary btn-sm" %></td>
      <% if post.user == current_user %>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', post_path(post), class: "btn btn-danger btn-sm",
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<%= link_to 'New post', new_post_path, class: "btn btn-primary btn-sm" %>

<%= will_paginate @posts %>
